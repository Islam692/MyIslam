<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/sound_mute"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_volume_mute_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/progressBar"
        android:layout_marginVertical="50dp"
        app:layout_constraintBottom_toTopOf="@id/progressBar"
        />

    <TextView
        android:id="@+id/tv_tasbeh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="190dp"
        android:fontFamily="@font/dthullth_ii_1"
        android:gravity="center"
        android:lineHeight="50dp"
        android:text="الله\nسبحان"
        android:textColor="#DCB486"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="330dp"
        android:layout_height="300dp"
        android:max="100"
        android:progress="0"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/pb_drawable"
        app:layout_constraintStart_toStartOf="@id/tv_tasbeh"
        app:layout_constraintEnd_toEndOf="@id/tv_tasbeh"
        app:layout_constraintTop_toTopOf="@id/tv_tasbeh"
        app:layout_constraintBottom_toBottomOf="@id/tv_tasbeh"
        />


    <TextView
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#DCB486"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tasbeh" />

</androidx.constraintlayout.widget.ConstraintLayout>