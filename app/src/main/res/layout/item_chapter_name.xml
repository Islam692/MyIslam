<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/counter"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ge_ss_two_bold"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="#DCB486"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/shaper"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />


    <ImageView
        android:id="@+id/shaper"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:src="@drawable/shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/counter"
        app:layout_constraintStart_toEndOf="@id/title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:fontFamily="@font/dthullth_ii_1"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="#DCB486"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/shaper"
        app:layout_constraintStart_toEndOf="@id/type"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="اسم السورة" />

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dthullth_ii_1"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="#fff"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/title"
        app:layout_constraintStart_toEndOf="@id/shapel"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="م" />

    <ImageView
        android:id="@+id/shapel"
        android:layout_width="40dp"
        android:layout_height="40sp"
        android:layout_margin="0dp"
        android:src="@drawable/shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/type"
        app:layout_constraintStart_toEndOf="@id/number"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/number"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ge_ss_two_bold"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="#DCB486"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/shapel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="7" />

</androidx.constraintlayout.widget.ConstraintLayout>