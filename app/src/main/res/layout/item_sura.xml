<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="sura"
            type="com.example.myislam.data.models.QuranSura" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr">

        <TextView
            android:id="@+id/sura_number"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ge_ss_two_bold"
            android:gravity="center"
            android:padding="8dp"
            android:text="@{Integer.toString(sura.number)}"
            android:textColor="#DCB486"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/name_number_divider_shape"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1" />


        <ImageView
            android:id="@+id/name_number_divider_shape"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:importantForAccessibility="no"
            android:src="@drawable/shape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sura_number"
            app:layout_constraintStart_toEndOf="@id/sura_title"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sura_title"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:fontFamily="@font/dthullth_ii_1"
            android:gravity="center"
            android:padding="8dp"
            android:text="@{sura.name}"
            android:textColor="#DCB486"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/name_number_divider_shape"
            app:layout_constraintStart_toEndOf="@id/type"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="اسم السورة" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dthullth_ii_1"
            android:gravity="center"
            android:padding="8dp"
            android:text="@{sura.type}"
            android:textColor="#fff"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sura_title"
            app:layout_constraintStart_toEndOf="@id/ayat_name_divider_shape"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="م" />

        <ImageView
            android:id="@+id/ayat_name_divider_shape"
            android:layout_width="40dp"
            android:layout_height="40sp"
            android:layout_margin="0dp"
            android:importantForAccessibility="no"
            android:src="@drawable/shape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/type"
            app:layout_constraintStart_toEndOf="@id/aya_count"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/aya_count"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ge_ss_two_bold"
            android:gravity="center"
            android:padding="8dp"
            android:text="@{Integer.toString(sura.ayaCount)}"
            android:textColor="#DCB486"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ayat_name_divider_shape"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="7" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>